<div id="email-password">
	<form action="/email" method="POST" class="form-email-password">
		<img id="loading-image" src="/images/mblais.png" width="100" height="100" alt="Loading..." />
		
		<% if(flash && flash.err) { %>
			<ul class="alert alert-success">
				<% Object.keys(flash.err).forEach(function(error) { %>
					<li><%- JSON.stringify(flash.err[error]) %></li>
				<% }) %>
			</ul>
		<% } %>
		
		<div class="control-group">
				<input type="text" class="form-control" placeholder="Email..." name="email">
				<br/>
			</div>
			<input type="submit" id="passwordSubmitEmail" class="btn btn-lg btn-primary btn-block" value="Reset Password" />
			<input type="hidden" name="_csrf" value="<%= _csrf %>" />
	
	</form>
</div>