<html>
	<head>
		<title>Leaflet Mobile Map</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
		<link href='https://fonts.googleapis.com/css?family=Carrois+Gothic+SC' rel='stylesheet' type='text/css'>
	</head>
	<body>
		<div id="email-password">
			<form action="/email" method="POST" class="form-email-password">
				<img id="loading-image" src="/images/mblais.png" width="100" height="100" alt="Loading..." />
				
				<% if(flash && flash.err) { %>
					<ul class="alert alert-success">
						<% Object.keys(flash.err).forEach(function(error) { %>
							<li><%- JSON.stringify(flash.err[error]) %></li>
						<% }) %>
					</ul>
				<% } %>
				
				<div class="control-group">
					<input type="text" class="form-control" placeholder="Email..." name="email">
					<br/>
				</div>
				<button type="submit" id="passwordSubmitEmail" class="btn btn-primary btn-responsive">Reset Password</button>
				<a href="/session/new" class="newSessionLink" >Sign In</a>
				<input type="hidden" name="_csrf" value="<%= _csrf %>" />
			</form>
		</div>
	</body>
</html>	