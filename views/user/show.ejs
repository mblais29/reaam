<html>
	<head>
		<title>Leaflet Mobile Map</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
		<link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
	</head>
	<body>
		<div class="show-users" >
			<!-- If no profile image then show default image else show profile image stored in database -->
			<% if(!user.profileimage){ %>
				<img id="imageProfile" src="/images/no-profile.png"><br/>
			<% }else{ %>
				<img id="imageProfile" src="/user/profileImg/<%- user.id %>" height="300" width="300"><br/>
			<% } %>
			<h1><%- user.firstname %> <%- user.lastname %></h1>
			<% if(user.admin){ %>
				<span class="glyphicon glyphicon-eye-open" style="font-size: 20px;"> Administrator</span> 
			<% }else{ %>
				<span class="glyphicon glyphicon-eye-close" style="font-size: 20px;"> Viewer</span> 
			<% } %>
			<hr>
			<h3>Contact: <%- user.email %></h3>
			
			<a class="btn btn-medium btn-primary" href="/user/edit/<%= user.id %>">Edit</a>
		</div>
	</body>
</html>